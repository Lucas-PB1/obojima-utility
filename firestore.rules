rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para usuários autenticados acessarem apenas seus próprios dados
    match /users/{userId} {
      // Permitir leitura e escrita apenas se o usuário estiver autenticado e for o dono dos dados
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Subcollections do usuário
      match /collectedIngredients/{ingredientId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /forageAttempts/{attemptId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /recipes/{recipeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /createdPotions/{potionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Configurações são armazenadas como campo no documento do usuário
      // Não precisa de regra separada, já está coberto pela regra do documento do usuário
    }
  }
}

